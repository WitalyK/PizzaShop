<h2>Your order</h2>
<br/>

<form action="/order" method="post" role="form">
  <table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">Name</th>
	      <th scope="col">Price</th>
	      <th scope="col">Quantity</th>
	    </tr>
	  </thead>
	  <tbody>
	  <% total_price = 0 %>
	  <% total_quantity = 0 %>
	  <% @items.each do |item| %>
	    <tr>
	      <th scope="row"><%= item[0].id %></th>
	      <td><%= item[0].title %></td>
	      <td><%= item[0].price %></td>
	      <td><%= item[1] %></td>
	    </tr>
	  <% total_price += item[0].price*item[1].to_i %>
	  <% total_quantity += item[1].to_i %>
	  <% end %>
	    <tr>
	      <th scope="row">Subtotal</th>
	      <td></td>
	      <td><%= total_price %></td>
	      <td><%= total_quantity %></td>
	    </tr>
	  </tbody>
  </table>

  <div class="form-group">
  	<label>Name</label>
  	<input type="text" name="order[name]" class="form-control" placeholder="Your name">
  </div>

  <div class="form-group">
  	<label>Phone</label>
  	<input type="text" name="order[phone]" class="form-control" placeholder="Your phone">
  </div>

  <div class="form-group">
  	<label>Delivery address</label>
  	<input type="text" name="order[address]" class="form-control" placeholder="Delivery address">
  </div>

	<input type="submit" class="btn btn-primary btn-lg" id="order_button_order"/>
</form>


