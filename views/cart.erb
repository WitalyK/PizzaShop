<h2>Your order</h2>
<br/>

<form action="/order" method="post">
  <div class="row">
    <% @product.each do |p| %>
    <div class="col-md-3">
      <div>
        <%= p.title %>
      </div>
      <div>
        <img src=<%= p.path_to_image %>>
      </div>
      <div>
        <%= p.description %>
      </div>
      <div>
        Цена <%= p.price %>
      </div>
      <div>
        Размер <%= p.size %>
      </div>
    </div>
    <% end %>
  </div>
<br/>
<br/>
	<input type="submit" class="btn btn-primary btn-lg" id="order_button_order"/>
</form>


<script type="text/javascript">
  $(function() {
    $('#order_button').hide();
  });
</script>
